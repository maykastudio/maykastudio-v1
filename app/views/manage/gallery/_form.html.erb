<%= simple_form_for(@gallery, :url => @gallery.new_record? ? manage_gallery_index_path : [:manage, @gallery], :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :state, :include_blank => false %>
    <%= f.input :image, :as => :file %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary btn-sm' %>
    <%= link_to 'Отмена', manage_gallery_index_path, :class => 'btn btn-default btn-sm' %>
  </div>
<% end %>
