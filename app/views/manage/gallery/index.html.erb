<div class="row">
  <div class="gallery manage">
    <% if @collection.any? %>
      <% @collection.each do |gallery| %>
        <div class="col-lg-6 gallery-medium">
          <%= link_to manage_gallery_path(gallery) do %>
            <% if gallery.image? %>
              <%= image_tag gallery.image.medium.url %>
            <% else %>
              <div class="gallery-stub">
              </div>
            <% end %>
          <% end %>

          <div class="caption manage">
            <div class="col-lg-6">
              <%= link_to gallery, manage_gallery_path(gallery) %>
            </div>

            <div class="col-lg-3">
              <%= link_to 'Изменить', edit_manage_gallery_path(gallery), :class => 'btn btn-primary btn-xs' %>
            </div>
            <div class="col-lg-3">
              <%= link_to 'Удалить', manage_gallery_path(gallery), :method => :delete, :class => 'btn btn-danger btn-xs' %>
            </div>
          </div>

        </div>
      <% end %>
    <% else %>
      <div class="empty col-lg-12">Еще нет ни одной галереи</div>
    <% end %>
  </div>

  <div class="col-lg-12">
    <%= link_to 'Добавить альбом', new_manage_gallery_path, :class => 'btn btn-primary btn-sm add-gallery' %>
  </div>
</div>
